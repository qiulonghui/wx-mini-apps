/* pages/vipcenter/vipcenter.wxss */
.main-wrap{
  background-color: #e6e6e6;
  min-height: 100vh;
  overflow-x: hidden;
}
.top{
  height: 440rpx;
  background-image:url(https://ip.freep.cn/591769/wximg/vipcenter-bg@2x.jpg);
  background-repeat: no-repeat;
  background-size: cover; 
  padding-top:88rpx; 
  box-sizing: border-box;
}
.top .user-wrap{
  width:144rpx;
  height:144rpx;
  border-radius: 50%; 
  margin: 0 auto;
  overflow: hidden;
  margin-bottom: 16rpx;
}
.user-wrap image{
  width: 100%;
}
.user-name{
  display: block;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 32rpx;
}
.user-info{
  display: flex;
  height: 120rpx;
}
.user-info view{
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding-top: 12rpx;
  padding-bottom: 18rpx;
  box-sizing: border-box;
  position: relative;
}
.user-info view::after{
  content: "";
  width: 1rpx;
  height: 80rpx;
  position: absolute;
  left: 0;
  background-color:#fff; 
  transform: scaleX(0.5);
  -webkit-transform: scaleX(0.5); 
}
.user-info view:first-child:after{
  content: none;
}
.user-info text{
  width: 100%;
  display: block;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.cont-item{
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  align-items: center;
  position: relative;
}
.cont-item image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
}
.cont-item text{
  flex: 1;
  font-size: 34rpx;
  color: #333;
}

.cont-item::before{
  content: "";
  position: absolute;
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
  left: 30rpx;
  top: 0;
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5); 
}
.cont-item::after{
  position:absolute;
  top:48%;
  right:30rpx;
  content:" ";
  display:inline-block;
  height:16rpx;
  width:16rpx;
  border-width:3px 3px 0 0;
  border-color:#c7c7c7;
  border-style:solid;
  transform:translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
.cont-item text.info{
  font-size: 24rpx;
  color: #a4a9b0;
  position: absolute; 
  left: 280rpx;
}