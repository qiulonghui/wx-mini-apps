/* pages/goodsdetail/goodsdetail.wxss */
.goodsdetail{
  background-color: #e6e6e6;
  min-height: 100vh;
  overflow-x: hidden;
}
.goodsdetail .con1{
  padding: 32rpx 30rpx; 
  background-color: #fff;
  display: flex;
  position: relative;
}
.goodsdetail .con1::after{
  content: "";
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
  position: absolute;
  left: 0;
  bottom: 0;
  transform: scaleY(0.5);
}
.goodsdetail image{
  width: 264rpx;
  height: 264rpx;
  margin-right: 15rpx;
}
.goodsdetail .con1 view{
  flex: 1;
}
.goodsdetail text{
  display: block;
  width: 100%;
  font-size: 28rpx;
  color: #a4a9b0;
}
.goodsdetail .sp-name{
  font-size:34rpx;
  color: #333333;
  margin-bottom: 24rpx;
}
.goodsdetail .dh text{
  display: inline;
  width: 100%;
}
.goodsdetail .dh text:last-child{
  color: #b7882d;
}
.goodsdetail .con2{
  background-color: #fff;
  padding: 32rpx 30rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.goodsdetail .con2 view{
  width: 100%;
  font-size: 28rpx;
  color: #a4a9b0;
}
.goodsdetail .con2 .title{
  color: #b7882d;
}
