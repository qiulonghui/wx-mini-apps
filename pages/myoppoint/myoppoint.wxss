/* pages/myoppoint/myoppoint.wxss */
.main-wrap{
  background-color: #e6e6e6;
  min-height: 100vh;
  overflow-x: hidden;
}
.tmp-top-title{
  margin-bottom: 32rpx;
}
.item{
  padding: 40rpx 30rpx;
  background-color: #fff;
  position: relative;
  margin-bottom: 24rpx;
}
.item::after{
  position:absolute;
  top:50%;
  right:30rpx;
  content:" ";
  display:inline-block;
  height:16rpx;
  width:16rpx;
  border-width:3px 3px 0 0;
  border-color:#c7c7c7;
  border-style:solid;
  transform:translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
.opp-number{
  font-size: 34rpx;
  color: #333;
  margin-bottom: 28rpx;
}
.other-info{
  font-size: 32rpx;
  color: #a4a9b0;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.other-info text:first-child{
  display: inline-block;
  width: 128rpx;
}
.state{
  position: absolute;
  top: 0;
  right: 0;
  width:96rpx;
  height:96rpx;
}