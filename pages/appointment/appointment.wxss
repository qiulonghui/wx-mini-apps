/* pages/appointment/appointment.wxss */
.item-info{
  position: relative;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.item-info text{
  flex: 1;
  margin-left: 24rpx;
  font-size: 34rpx;
  color: #333333;
}
.item-info::after{
  position:absolute;
  left:0;
  right:0;
  bottom:0;
  border-top:1rpx solid #e5e5e5;
  background:#e5e5e5;
  content:''; 
}
.item-position{
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.item-position .text-wrap{
  flex: 1;
}

.item-position text{
  display: block;
  font-size: 26rpx;
  color: #a4a9b0;
}
.item-position text:first-child{
  margin-bottom: 16rpx;
  font-size: 34rpx;
  color: #333333;
}
.item-people{
  display: flex;
  height: 88rpx;
  align-items: center;
  padding: 0 30rpx;
  background-color: #ffffff;
  position: relative;
}
.item-people::after{
  position:absolute;
  left:30rpx;
  right:0;
  bottom:0;
  border-top:1rpx solid #e5e5e5;
  background:#e5e5e5;
  content:''; 
}
.item-people label{
  margin-left: 32rpx;
  font-size: 34rpx;
  color: #333333;
}
.item-people input{
  flex: 1;
  text-align: right;
  font-size: 26rpx;
  color: #a4a9b0;
}
.item-people .placeholder{
    color: #a4a9b0;
}
.item-time{
  display: flex;
  height: 88rpx;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  background-color: #ffffff;
  position: relative;
  margin-bottom: 32rpx;
}
.item-time label{
  margin-left: 32rpx;
  font-size: 34rpx;
  color: #333333;
}
.item-time .cont1,
.item-time .cont2{
  display: flex;
  align-items: center;
}
.item-time picker{
  display: inline-block;
  font-size: 26rpx;
  color: #a4a9b0;
}
.item-time picker:first-child{
  margin-right: 13rpx;
}
.item-cont{
  background-color: #ffffff;
}
.item-cont .top{
  height: 88rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #333333;
  position: relative
}
.item-cont .top text{
  margin-left: 32rpx;
}
.item-cont .top::after{
  position: absolute;
  content: "";
  border-top: 1rpx solid #e5e5e5;
  background:#e5e5e5;
  bottom: 0;
  left: 0;
  right: 0;
}
.item-cont .body{
  padding-top: 16px;
  display: flex;
  flex-flow: row wrap;
  height: 261px;
  overflow: hidden;
}
.item-cont .body .icon-wrap{
  width: 25%;
  height: 87px;
  flex: 0 0 25%;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
}

.item-cont .body text{
  display: block;
  text-align: center;
  font-size: 26rpx;
  width: 100%;
  color: #a4a9b0;
}
.item-cont .body .img-wrap{
  width: 50px;
  height: 50px;
  border-radius: 50%; 
  position: relative;
}
.item-cont .body .img-wrap.active::after{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(164, 37, 82, 0.3);
  box-sizing: border-box;
  border: 2px solid #a32351;
  z-index: 2;
}
.btn-view{
  margin: 64rpx 30rpx;
}
.btn-view button{
  border: 1rpx solid #500047;
  border-radius: 10rpx;
  background-color: #a32351;
  color: #ffffff;
}
.btn-view button.other-button-hover{
  background-color: #a85879;
}

