/* pages/intgral/intgral.wxss */
.main-wrap{
  background-color: #e6e6e6;
  min-height: 100vh;
}
.cont1,.cont2{
  margin-bottom: 32rpx;
}
.top{
  height: 90rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 0 30rpx;
  font-size: 34rpx;
}
.top image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
}
.title{
  color: #333333;
  flex: 1;
}
.score{
  color: #b7882d;
}
.bar{
  position: relative;
}
.bar::after{
  content: "";
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
  position: absolute;
  left: 0;
  bottom: 0;
  transform: scaleY(0.5);
}
.body{
  background-color: #fff;
  padding: 16rpx 30rpx 32rpx 30rpx;
}
.body text{
  font-size:28rpx;
  color: #333333;
}