/* pages/store/store.wxss */
.main-wrap{
  background-color: #e6e6e6;
  min-height: 100vh;
  overflow-x: hidden;
}
.top{
  padding:0 30rpx; 
  height: 90rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  background-color: #fff;
  position: relative;
}
.top .title{
  color: #a32351;
}
.top .score{
  color: #b7882d;
}
.spilt{
  margin: 0 15rpx;
  color: #a32351;
}
.top::after{
  content: "";
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
  position: absolute;
  transform: scaleY(0.5);
  margin-top: 45rpx;
}
.item{
  padding: 32rpx 30rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  position: relative;
}
.item::after{
  content: "";
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
  position: absolute;
  left: 30rpx;
  transform: scaleY(0.5);
  margin-top:91rpx; 
}
.item image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx; 
}
.text-cont{
  flex: 1;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  position: relative;
}
.text-cont text{
  display: block;
  width: 100%;
}
.main-text{
  font-size: 34rpx;
  color: #333;
  margin-bottom: 16rpx;
}
.sub-text{
  font-size: 26rpx;
  color: #a4a9b0;
}
.text-cont::after,
.more::after{
  position:absolute;
  top:50%;
  right:0;
  content:" ";
  display:inline-block;
  height:16rpx;
  width:16rpx;
  border-width:3px 3px 0 0;
  border-color:#c7c7c7;
  border-style:solid;
  transform:translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
.more{
  padding: 32rpx 30rpx;
  background-color: #fff;
  position: relative;
}
.more text{
  font-size: 28rpx;
  color: #888;
}
.more::after{
  right:30rpx;
}
.more-hover{
  opacity: 0.7;
}