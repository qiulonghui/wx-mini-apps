/* pages/surveydetail/surveydetail.wxss */
.main-wrap{
  background-color: #e6e6e6;
  min-height: 100vh;
  overflow-x: hidden;
}
.tmp-top-title{
  margin-bottom: 32rpx;
}
.cont-wrap{
  background-color: #fff;
  margin-bottom: 32rpx;
}
.cont-wrap .title{
  padding: 23rpx 30rpx 24rpx 30rpx;
  color: #333;
  font-size: 34rpx;
  position: relative;
}
.cont-wrap .title::after{
  content: "";
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
  position: absolute;
  bottom: 0;
  left: 0;
  transform: scaleY(0.5);
}
.cont-wrap .img-wrap{
  padding: 32rpx 30rpx 38rpx 30rpx;
}
.img-wrap image{
  width: 49rpx;
  height: 43rpx;
  margin-right: 48rpx;
}
.cont-wrap textarea{
  margin-top: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 28rpx;
}
.btn-wrap{
  margin: 60rpx 30rpx;
}
.submit-btn{
  border: 1rpx solid #500047;
  border-radius: 10rpx;
  background-color: #a32351;
  color: #ffffff;
  margin: 32rpx 30rpx;
}
.submit-btn-hover{
  background-color: #a85879;
}