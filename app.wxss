@import "./zanui-weapp/dist/index.wxss";
/**app.wxss**/
.container{
  background: #e6e6e6;
  overflow: hidden;
  min-height: 100vh;
  box-sizing: border-box;
} 
/* 公用弹出层的样式 */
.toast{
  position:fixed;
  top:35%;
  left:20%;
  transform:translateZ(0) translateY(-100%);
  background:rgba(0, 0, 0, 0.7);
  color:#fff;
  font-size:14px;
  width:60%;
  line-height:1.5em;
  margin:0 auto;
  box-sizing:border-box;
  padding:10px;
  text-align:center;
  border-radius:4px;
  z-index:100;
}

/* 商品列表页的公共样式 */
.goodslist{
  background-color: #e6e6e6;
  min-height: 100vh;
  overflow-x: hidden;
}
.goodslist .top{
  padding:0 30rpx; 
  height: 90rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  background-color: #fff;
  position: relative;
}
.goodslist .top .title{
  color: #a32351;
}
.goodslist .top .score{
  color: #b7882d;
}
.goodslist .top::after{
  content: "";
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
  position: absolute;
  transform: scaleY(0.5);
  margin-top: 45rpx;
}
.goodslist .item{
  padding: 32rpx 30rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  position: relative;
}
.goodslist .item::after{
  position: absolute;
  content: "";
  border-top: 1rpx solid #e5e5e5;
  background:#e5e5e5;
  bottom: 0;
  left: 30rpx;
  right:0;
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5); 
}
.goodslist .item image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx; 
}
.goodslist .text-cont{
  flex: 1;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  position: relative;
}
.goodslist .text-cont text{
  display: block;
  width: 100%;
}
.goodslist .main-text{
  font-size: 34rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.goodslist .middle-text,
.goodslist .sub-text{
  font-size: 26rpx;
  color: #a4a9b0;
}
.goodslist .sub-text text{
  display: inline-block;
  width: auto;
}
.goodslist .sub-text text:last-child{
  color: #b7882d;
}
.goodslist .middle-text{
  margin-bottom: 8rpx;
}
.goodslist .spilt{
  margin: 0 15rpx;
}
.goodslist .text-cont::after{
  position:absolute;
  top:50%;
  right:0;
  content:" ";
  display:inline-block;
  height:16rpx;
  width:16rpx;
  border-width:3px 3px 0 0;
  border-color:#c7c7c7;
  border-style:solid;
  transform:translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}


/* 标题title的公共样式 */
.tmp-top-title{
  height: 90rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #333333;
  background-color: #fff;
  position: relative
}
.tmp-top-title text{
  margin-left: 32rpx;
}
.tmp-top-title::after{
  position: absolute;
  content: "";
  border-top: 1rpx solid #e5e5e5;
  background:#e5e5e5;
  bottom: 0;
  left: 0;
  right:0;
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5); 
}

/* 弹出层model公共样式 */
.model-wrap{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(51, 51, 51, 0.7);
  z-index: 101;
}
.model-main{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 70%;
  transform: translate(-50%,-50%);
  background-color: #fff;
  border-radius: 20rpx;
}
.model-header{
  padding: 48rpx 0 32rpx 0;
  text-align: center;
  color: #333;
  font-size: 36rpx;
}
.model-body .info{
  padding-bottom: 32rpx;
  color: #888;
  font-size: 28rpx;
  text-align: center;
}
.model-body image{
  display: block;
  width: auto;
  margin: 0 32rpx;
  margin-bottom: 32rpx;
}
.model-bottom{
  font-size: 36rpx;
  text-align: center;
  color: #a32351;
  border-top: 1rpx solid #d5d5d5; 
  display: flex;
}
.model-bottom .btn{
  flex: 1;
  padding: 28rpx 0;
}
.model-bottom .cancel-btn{
  border-right: 1rpx solid #d5d5d5;
  color:#888;
}